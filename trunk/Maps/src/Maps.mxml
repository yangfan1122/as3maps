	<maps:Map xmlns:maps="com.google.maps.*"
			  id="map"
			  mapevent_mapready="onMapReady(event)"
			  width="100%"
			  height="90%"
			  key="ABQIAAAArMskXbiWHQ1rQlpK9twPWBQ_15XCSNWRGl3YP4mTtVd2iul6wBT_qa_uCi80UROH_W-_y84egWc2HQ"
			  sensor="true"/>
	
	<s:HGroup id="panel"
			  verticalAlign="middle"
			  visible="false">
		<s:TextInput id="searchInput"
					 width="400"/>
		<!--  restrict="0-9\a-z\^{'[\u4e00-\u9fa5]'}" -->
		<s:Button id="searchBtn"
				  label="search"/>
		<s:Label id="label"/>
